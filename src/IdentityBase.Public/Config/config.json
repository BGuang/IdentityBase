{
  "Host": {
    "Urls": "http://*:5000",
    "UseIISIntegration": false,
    "Cors": "http://localhost:8080"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.RollingFile" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Information",
        "Microsoft": "Information",
        "IdentityModel": "Information",
        "IdentityServer4": "Information",
        "IdentityBase": "Information"
      }
    },
    "WriteTo": [
      { "Name": "LiterateConsole" },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "./TempData/log-{Date}.txt",
          "fileSizeLimitBytes": 1234567
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "IdentityBase"
    }
  },
  "EntityFramework": {
    "MigrateDatabase": false,
    "SeedExampleData": true,
    "EnsureDeleted": false,
    "SeedExampleDataPath": "./config",
    "Npgsql": {
      "ConnectionString": "User ID=postgres;Password=postgres;Host=localhost;Port=5432;Database=identitybase;Pooling=true;"
    }
  },
  "Events": {
    "RaiseErrorEvents": true,
    "RaiseFailureEvents": true,
    "RaiseInformationEvents": true,
    "RaiseSuccessEvents": true
  },
  "IdentityServer": {
    "SigningCredentialFromPfx": {
      "Path": "./Config/idsvr3test.pfx",
      "Password": "idsrv3test"
    }
  },
  "App": {
    "PublicUrl": "http://localhost:5000",
    "TempFolder": "./TempData",
    "EnableLocalLogin": true,
    "EnableRememberLogin": true,
    "PasswordHashingIterationCount": 0,
    "AccountLockoutFailedLoginAttempts": 5,
    "AccountLockoutDuration": 600,
    "RequireLocalAccountVerification": true,
    "RequireExternalAccountVerification": false,
    "LoginAfterAccountCreation": true,
    "LoginAfterAccountConfirmation": true,
    "LoginAfterAccountRecovery": true,
    "VerificationKeyLifetime": 1440,
    "AutomaticAccountMerge": true,
    "EnableAccountRegistration": true,
    "EnableAccountRecover": true,
    "EnableAccountDeletion": false,
    "EnableLoginHints": false,
    "EnableUserInviteEndpoint": true
  },
  "Email": {
    "TemplateDirectoryPath": "./EmailTemplates"
  },
  "Sms": {
    "TemplateDirectoryPath": "./Templates/Sms"
  },
  "Services": {
    "modules": [
      { "type": "IdentityBase.Public.EntityFramework.InMemoryModule, IdentityBase.Public.EntityFramework" },
      { "type": "IdentityBase.Public.EntityFramework.ExampleDataStoreInitializerModule, IdentityBase.Public.EntityFramework" },
      { "type": "IdentityBase.Public.DebugSmsModule, IdentityBase.Public" },
      { "type": "IdentityBase.Public.DebugEmailModule, IdentityBase.Public" },
      { "type": "IdentityBase.Public.DefaultEventModule, IdentityBase.Public" }
    ]
  }
}